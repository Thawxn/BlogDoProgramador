<%- include ('../../partials/header.ejs')%>

<body>
    <%- include ('../../partials/navbar.ejs')%>
    

    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <hr> 
            <div class="card">
                <div class="card-header">
                    <%= article.title %>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-primary">Ler Artigo</a>
                </div>
                
            </div>
            <br>

        <% }) %>

            <div class="row">
                <div class="col col-12">

                    <% if(result.page > 2) { %>
                        <a style="float:left;" href="/articles/page/<%= result.page - 1 %>"><<< Prev</a>
                    <% } else { %>
                        <a style="float:left;" href="/"><<< Prev</a>
                    <% } %>
                    <% if(result.next) { %>
                    <a style="float:right;" href="/articles/page/<%= result.page + 1 %>">Next >></a>
                    <% } %>
                </div>
            </div>
            <hr>
        

        
    </div>

</body>

